<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <View 
        android:layout_height="1px"
        android:background="@color/divider_gray"
        android:layout_width="match_parent"/>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        >
        <LinearLayout 
            android:id="@+id/ll_share_button"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_tran2gray_sel"
            >
            <ImageView 
                android:id="@+id/iv_share_button"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/timeline_icon_retweet"
                />
            <TextView 
                android:id="@+id/tv_share_button"
                style="@style/TextViewCaption"
                android:layout_marginLeft="8dp"
                android:text="转发"
                android:textColor="@color/txt_gray" 
                />
        </LinearLayout>
        <View 
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_gray"
            />
                <LinearLayout
            android:id="@+id/ll_comment_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tran2gray_sel"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_comment_bottom"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/timeline_icon_comment" />

            <TextView
                android:id="@+id/tv_comment_bottom"
                style="@style/TextViewCaption"
                android:layout_marginLeft="8dp"
                android:text="评论"
                android:textColor="@color/txt_gray" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_gray" />

        <LinearLayout
            android:id="@+id/ll_like_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tran2gray_sel"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_like_bottom"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/timeline_icon_unlike" />

            <TextView
                android:id="@+id/tv_like_bottom"
                style="@style/TextViewCaption"
                android:layout_marginLeft="8dp"
                android:text="点赞"
                android:textColor="@color/txt_gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
